@model Milty.Models.UserTask

@{
    ViewBag.Title = "Удаление задачи";

    var backRepo = "";
    if (Request["backto"] != null)
    {
        backRepo = Request["backto"];
    }
}

<h3>Вы действительно хотите удалить задачу?</h3>
<div>
    <h4>@Html.DisplayFor(model => model.Name)</h4>

    <p>
        @Html.DisplayFor(model => model.Description)
    </p>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.User)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.User)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Tag)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tag)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Repository)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Repository)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Удалить" class="btn btn-default" />
        @if (backRepo == "")
        {
            @Html.ActionLink("Вернуться к списку", "Index")
        }
        else
        {
            @Html.ActionLink("Вернуться к списку", "Details", "Repositories", new { id = backRepo }, null)
        }
    </div>
    }
</div>
